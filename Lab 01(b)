class SimpleReflexVacuumAgent:
    def __init__(self, start_location, room_a_status, room_b_status):
        self.location = start_location
        self.status = {'A': room_a_status, 'B': room_b_status}

    def perceive(self):
        return self.location, self.status[self.location]

    def act(self):
        location, status = self.perceive()

        if status == 'dirty':
            print(f"Cleaning room {location}")
            self.status[location] = 'clean'
        else:
            new_location = 'B' if location == 'A' else 'A'
            print(f"Moving from room {location} to room {new_location}")
            self.location = new_location

    def run(self, steps):
        for _ in range(steps):
            location, status = self.perceive()
            print(f"Current location: {location}, Status: {status}")
            self.act()
            print(f"Room A: {self.status['A']}, Room B: {self.status['B']}")
            print("----------")

if __name__ == "__main__":
    start_location = input("Enter the starting location of the vacuum cleaner (A or B): ").strip().upper()
    while start_location not in ['A', 'B']:
        print("Invalid input. Please enter either 'A' or 'B'.")
        start_location = input("Enter the starting location of the vacuum cleaner (A or B): ").strip().upper()

    room_a_status = input("Enter the status of room A (clean or dirty): ").strip().lower()
    while room_a_status not in ['clean', 'dirty']:
        print("Invalid input. Please enter either 'clean' or 'dirty'.")
        room_a_status = input("Enter the status of room A (clean or dirty): ").strip().lower()

    room_b_status = input("Enter the status of room B (clean or dirty): ").strip().lower()
    while room_b_status not in ['clean', 'dirty']:
        print("Invalid input. Please enter either 'clean' or 'dirty'.")
        room_b_status = input("Enter the status of room B (clean or dirty): ").strip().lower()

    agent = SimpleReflexVacuumAgent(start_location, room_a_status, room_b_status)
    agent.run(10)
